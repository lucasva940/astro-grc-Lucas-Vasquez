---
import Tarjeta from '../components/tarjeta.astro';
import noticiasData from '../data/noticias.json';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Ãšltimas Noticias">
  <div class="container mx-auto py-12">
    <h1 class="text-4xl font-bold text-center mb-8">Noticias</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        noticiasData.map((noticia) => (
          <Tarjeta
            titulo={noticia.titulo}
            linkSaberMas={`/noticias/${noticia.id}`} 
          >
            {}
            <div class="p-4">
              <p class="text-gray-700">{noticia.contenido}</p>
            </div>
          </Tarjeta> 
        ))
      }
    </div>
  </div>
</Layout>